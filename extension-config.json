{
  "version": "1.0.0-rc.2",
  "id": "@shopgate-project/search-suggestions-extended",
  "configuration": {
    "layout": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "showResultCount": true,
        "showFilterButton": true,
        "showHighlights": true
      },
      "params": {
        "type": "json" ,
        "label": "Layout settings (show counter, filter button, etc)"
      }
    }
  },
  "components": [
    {
      "id": "SearchSuggestions",
      "type": "portals",
      "target": [ "search.suggestions", "persistent-search-bar.search.suggestions" ],
      "path": "frontend/portals/SearchSuggestions"
    },
    {
      "id": "reducers",
      "path": "frontend/search/reducers.js",
      "type": "reducers"
    },
    {
      "id": "SubscribersSearch",
      "path": "frontend/search/subscriptions.js",
      "type": "subscribers"
    },
    {
      "type": "translations",
      "path": "frontend/locale/en-US.json",
      "id": "locale/en-US"
    },
    {
      "type": "translations",
      "path": "frontend/locale/de-DE.json",
      "id": "locale/de-DE"
    }
  ],
  "steps": [ ]
}
